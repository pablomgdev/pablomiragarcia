---
interface Properties {
    imageSrc: string,
    title: string,
    date: Date
}
const { imageSrc, title, date }: Properties = Astro.props as Properties;
---

<div class="container clickable">
    <div class="post-image-container">
        <div class="post-image">
            <img src={imageSrc} alt="Post image">
        </div>
    </div>
    <div class="post-details-container">
        <h2>{title ?? 'Sin título'}</h2>
        <p class="date">{date?.toLocaleDateString('es-ES', { timeZone: 'UTC' }) ?? 'Sin fecha de publicación'}</p>
    </div>
</div>

<style>
    .container {
        display: flex;
        flex-direction: column;
        padding: 1.5rem;
        border-radius: 5px;
        align-items: center;
    }
    .container:hover{
        background-color: var(--dark-color-hover);
    }
    .post-image{
        height: 12rem;
    }
    img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        margin: 0 auto;
        border-radius: 2px;
    }
    .post-details-container{
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        height: 100%;
    }
    .date {
        margin: 0;
        color: var(--dark-text-color);
    }
    .post-image-container,
    .post-details-container{
        width: 100%;
        max-width: 24em;
    }
</style>
